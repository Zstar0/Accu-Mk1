{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Accu-Mk1",
  "version": "0.6.0",
  "identifier": "com.accumark.accu-mk1",
  "build": {
    "removeUnusedCommands": true,
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Accu-Mk1",
        "width": 1000,
        "height": 700,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false,
        "transparent": false,
        "shadow": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' tauri: ipc: http://ipc.localhost http://127.0.0.1:8008 http://127.0.0.1:8009 http://127.0.0.1:8011 http://127.0.0.1:8012"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "createUpdaterArtifacts": false,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Accumark Labs",
    "category": "DeveloperTool",
    "shortDescription": "Lab operations desktop application for Accumark",
    "longDescription": "Accu-Mk1 is a desktop application for processing lab HPLC results, managing sample reviews, and debugging integration service data.",
    "copyright": "Copyright Â© 2025 Danny Smith. All rights reserved.",
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "signingIdentity": "-",
      "providerShortName": null,
      "entitlements": null,
      "exceptionDomain": ""
    }
  },
  "plugins": {
    "updater": {
      "active": false,
      "endpoints": [],
      "dialog": false,
      "pubkey": ""
    }
  }
}
