# Accu-MK1 Environment Configuration
# ===================================
# Copy this file to .env and fill in your values.
# The .env file is gitignored for security.

# --- Active Environment ---
# Set which database to connect to: "local", "staging", or "production"
INTEGRATION_DB_ENV=local

# --- Local Development (Docker) ---
INTEGRATION_DB_LOCAL_HOST=localhost
INTEGRATION_DB_LOCAL_PORT=5432
INTEGRATION_DB_LOCAL_NAME=accumark_integration
INTEGRATION_DB_LOCAL_USER=postgres
INTEGRATION_DB_LOCAL_PASSWORD=accumark_dev_secret

# --- Staging ---
INTEGRATION_DB_STAGING_HOST=your-staging-host.com
INTEGRATION_DB_STAGING_PORT=5432
INTEGRATION_DB_STAGING_NAME=accumark_integration
INTEGRATION_DB_STAGING_USER=
INTEGRATION_DB_STAGING_PASSWORD=

# --- Production ---
INTEGRATION_DB_PROD_HOST=your-production-host.com
INTEGRATION_DB_PROD_PORT=5432
INTEGRATION_DB_PROD_NAME=accumark_integration
INTEGRATION_DB_PROD_USER=
INTEGRATION_DB_PROD_PASSWORD=
